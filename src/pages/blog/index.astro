---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import FadeIn from '../../components/FadeIn.astro';
import Card from '../../components/Card.astro';

const blogEntries = await getCollection('blog');
const fallbackDate = new Date('1970-01-01');

const sortedContent = blogEntries.sort((a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) =>
  (b.data.publishDate ? new Date(b.data.publishDate) : fallbackDate).valueOf() -
  (a.data.publishDate ? new Date(a.data.publishDate) : fallbackDate).valueOf()
);

const seo = {
  title: "Blog",
  description: "Explore my latest blog posts on AI, software, and technical strategy.",
};
---
<Layout seo={seo}>
  <div class="mx-auto w-full max-w-[1800px] px-[clamp(3.25rem,8vw,7.25rem)] py-16 space-y-10">
    <FadeIn>
      <div class="rounded-3xl bg-gradient-to-br from-white via-[#eef3fb] to-[#dfe9f5] border border-white/60 shadow-xl px-6 py-8 md:px-10 md:py-10 flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div class="space-y-1">
          <h1 class="text-4xl font-bold text-gray-900">BLOG POSTS</h1>
          <p class="text-gray-600 max-w-2xl">Domesitcating technical advancements in technology and business.</p>
        </div>
        <div class="flex gap-3">
          <div class="stat-pill">
            <span class="text-xs uppercase text-gray-600 text-center w-full">Articles</span>
            <span class="text-2xl font-bold text-gray-900 text-center w-full counter" data-target={sortedContent.length}>0</span>
          </div>
        </div>
      </div>
    </FadeIn>

    <div id="blog-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4 gap-8 lg:gap-10 items-stretch">
      {sortedContent.map((item: CollectionEntry<'blog'>) => (
        <FadeIn>
          <Card
            title={item.data.title}
            description={item.data.description}
            href={`/blog/${item.slug}/`}
            tags={item.data.tags ?? []}
            type="blog"
            publishDate={item.data.publishDate}
            heroImage={item.data.heroImage}
          />
        </FadeIn>
      ))}
    </div>
  </div>
</Layout>

<style>
  .stat-pill {
    display: inline-flex;
    flex-direction: column;
    gap: 0.1rem;
    padding: 0.65rem 0.9rem;
    border-radius: 0.9rem;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(226, 232, 240, 0.9);
    box-shadow: 0 10px 24px rgba(15, 23, 42, 0.08);
    min-width: 90px;
    align-items: center;
    justify-content: center;
    text-align: center;
  }
</style>

<script>
  function setupBlogCounters() {
    const counters = document.querySelectorAll('.counter:not([data-animated])');
    if (!counters.length) return;

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const el = entry.target as HTMLElement;
          el.setAttribute('data-animated', 'true');
          const target = Number(el.dataset?.target || 0);
          const duration = 900;
          const start = performance.now();

          function tick(now: number) {
            const progress = Math.min((now - start) / duration, 1);
            const value = Math.floor(progress * target);
            el.textContent = value.toString();
            if (progress < 1) requestAnimationFrame(tick);
            else el.textContent = target.toString();
          }

          requestAnimationFrame(tick);
          observer.unobserve(el);
        }
      });
    }, { threshold: 0.5 });

    counters.forEach((counter) => {
      counter.textContent = '0';
      observer.observe(counter);
    });
  }

  if (typeof window !== 'undefined') {
    setupBlogCounters();
    document.addEventListener('astro:after-swap', () => {
      const counters = document.querySelectorAll('.counter');
      counters.forEach((c) => c.removeAttribute('data-animated'));
      setupBlogCounters();
    });
  }
</script>
