---
import Layout from '../layouts/Layout.astro';

const seo = {
  title: "Page Not Found",
  description: "The page you are looking for could not be found.",
  noindex: true
};
---
<Layout seo={seo}>
  <div class="container mx-auto p-8 text-center">
    <h1 class="text-6xl font-bold text-accent mb-4">404</h1>
    <h2 class="text-3xl font-bold mb-4">Page Not Found</h2>
    <p class="text-lg text-gray-600 mb-8">
      Sorry, we couldn't find the page you were looking for.
    </p>
    <a href="/" class="bg-accent text-white font-bold py-3 px-6 rounded-md hover:bg-accent/90 transition-colors duration-200">
      Go Back Home
    </a>
  </div>
</Layout>