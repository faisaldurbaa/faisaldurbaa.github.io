---
// src/pages/about.astro
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import FadeIn from '../components/FadeIn.astro';
import profilePic from '../assets/profile.jpg';

const seo = {
  title: "About Me",
  description: "Learn more about Joe Snow, his skills, and professional background."
};
---
<Layout seo={seo}>
  <!-- 1. Added max-w-4xl to constrain the width -->
  <div class="container mx-auto max-w-4xl p-4 sm:p-8">
    <FadeIn>
      <div class="bg-white p-6 sm:p-8 border border-gray-200 rounded-lg shadow-sm">
        <div class="flex flex-col md:flex-row items-center justify-center gap-8 md:gap-12">
          
          <div class="flex-shrink-0">
            <Image 
              src={profilePic} 
              alt="A photo of Joe Snow"
              width={200}
              height={200}
              class="w-40 h-40 md:w-48 md:h-48 rounded-full border-4 border-white shadow-lg object-cover"
            />
          </div>

          <div class="text-center md:text-left">
            <!-- 2. Updated Title and added Subtitle -->
            <h1 class="text-4xl font-bold mb-2">Joe Snow</h1>
            <p class="text-xl text-gray-600 mb-6">
              A passionate developer building efficient and user-friendly web applications.
            </p>
            <p class="text-lg text-gray-700 leading-relaxed">
              This portfolio is a showcase of my work, including personal projects, academic coursework, and blog posts where I share my learnings. Feel free to explore and get in touch!
            </p>
          </div>
        </div>
      </div>
    </FadeIn>
  </div>
</Layout>