---
import type { CollectionEntry } from 'astro:content';
import Layout from './Layout.astro';
import FadeIn from '../components/FadeIn.astro';
import ShareButton from '../components/ShareButton.astro';
import RelatedContent from '../components/RelatedContent.astro';

interface Props {
  entry: CollectionEntry<'blog'> | CollectionEntry<'courses'> | CollectionEntry<'projects'>;
  backLink: string;
  backText: string;
  previousLesson?: CollectionEntry<'courses'> | null | undefined;
  nextLesson?: CollectionEntry<'courses'> | null | undefined;
  courseSlug?: string | undefined;
}

const { entry, backLink, backText, previousLesson, nextLesson, courseSlug } = Astro.props;
const { Content } = await entry.render();

const showRelatedContent = entry.collection === 'blog';
---
<Layout seo={{
  title: entry.data.title,
  description: entry.data.description,
  image: entry.data.heroImage
}}>
  <article class="container mx-auto max-w-4xl p-4 sm:p-8">
    <FadeIn>
      <div class="bg-white p-6 sm:p-8 border border-gray-200 rounded-lg shadow-sm mb-8">
        <div class="flex justify-between items-center mb-4">
          <p class="text-accent font-semibold">
            <a href={backLink} class="inline-flex items-center gap-2 hover:underline">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>{backText}
            </a>
          </p>
          <ShareButton title={entry.data.title} />
        </div>
        <h1 class="text-3xl md:text-4xl font-bold mb-2">{entry.data.title}</h1>
        <p class="text-lg text-gray-600">{entry.data.description}</p>
      </div>

      <div class="bg-white p-6 sm:p-8 border border-gray-200 rounded-lg shadow-sm">
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>
      </div>
      {(previousLesson || nextLesson) && courseSlug && (
        <div class="bg-white p-6 sm:p-8 border border-gray-200 rounded-lg shadow-sm mt-8">
          <div class="flex flex-col sm:flex-row justify-between gap-4">
            <div class="flex-1">
              {previousLesson ? (
                <a 
                  href={`/courses/${courseSlug}/${previousLesson.slug.split('/')[1]}/`}
                  class="group flex items-center gap-3 p-4 rounded-lg border border-gray-200 hover:border-accent hover:bg-accent/5 transition-all duration-200"
                >
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 group-hover:bg-accent/10 flex items-center justify-center transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-600 group-hover:text-accent">
                      <path d="m15 18-6-6 6-6"/>
                    </svg>
                  </div>
                  <div class="min-w-0 flex-1">
                    <p class="text-sm text-gray-500 mb-1">Previous Lesson</p>
                    <p class="font-semibold text-gray-900 group-hover:text-accent transition-colors truncate">
                      {previousLesson.data.title}
                    </p>
                  </div>
                </a>
              ) : (
                <div class="p-4 rounded-lg border border-gray-100 bg-gray-50">
                  <p class="text-sm text-gray-400">No previous lesson</p>
                </div>
              )}
            </div>

            <div class="flex-1">
              {nextLesson ? (
                <a 
                  href={`/courses/${courseSlug}/${nextLesson.slug.split('/')[1]}/`}
                  class="group flex items-center gap-3 p-4 rounded-lg border border-gray-200 hover:border-accent hover:bg-accent/5 transition-all duration-200 text-right"
                >
                  <div class="min-w-0 flex-1">
                    <p class="text-sm text-gray-500 mb-1">Next Lesson</p>
                    <p class="font-semibold text-gray-900 group-hover:text-accent transition-colors truncate">
                      {nextLesson.data.title}
                    </p>
                  </div>
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 group-hover:bg-accent/10 flex items-center justify-center transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-600 group-hover:text-accent">
                      <path d="m9 18 6-6-6-6"/>
                    </svg>
                  </div>
                </a>
              ) : (
                <div class="p-4 rounded-lg border border-gray-100 bg-gray-50 text-right">
                  <p class="text-sm text-gray-400">No next lesson</p>
                </div>
              )}
            </div>
          </div>
        </div>
      )}

    </FadeIn>
  </article>
  
  {showRelatedContent && (
    <div class="container mx-auto max-w-7xl px-4 sm:px-8 pb-16">
      <FadeIn>
        <RelatedContent currentSlug={entry.slug} />
      </FadeIn>
    </div>
  )}
</Layout>