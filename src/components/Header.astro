---
// src/components/Header.astro
const navLinks = [
  { name: "Portfolio", href: "/portfolio" },
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" },
];
---
<header class="bg-white/50 backdrop-blur-sm border-b border-gray-200/50 p-4 fixed top-0 w-full z-50">
  <div class="container mx-auto flex justify-between items-center">
    <a href="/" class="text-xl font-bold text-gray-900">Joe Snow</a>
    <nav class="hidden md:flex space-x-6">
      {navLinks.map(link => (
        <a href={link.href} class="text-gray-700 hover:text-blue-700 transition-colors duration-200">{link.name}</a>
      ))}
    </nav>
    <!-- Mobile menu placeholder -->
    <div class="md:hidden">
      <!-- Hamburger icon will go here -->
    </div>
  </div>
</header>