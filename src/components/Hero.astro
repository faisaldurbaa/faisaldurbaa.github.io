---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import profilePic from '../assets/profile.webp';

const desktopIcons = [

  { name: 'mdi:language-python', classes: 'top-[15%] left-[20%] w-16 h-16 -rotate-12 text-gray-300/70' },
  { name: 'mdi:language-typescript', classes: 'bottom-[18%] right-[22%] w-14 h-14 rotate-6 text-gray-300/70' },
  { name: 'mdi:git', classes: 'top-[60%] left-[15%] w-16 h-16 rotate-12 text-gray-300/60' },
  { name: 'mdi:terminal', classes: 'top-[15%] right-[35%] w-14 h-14 -rotate-6 text-gray-300/70' },
  { name: 'mdi:atom', classes: 'top-[45%] right-[15%] w-24 h-24 -rotate-12 text-gray-300/80' },
  { name: 'mdi:dna', classes: 'top-[20%] right-[22%] w-14 h-14 rotate-12 text-gray-300/60' },
  { name: 'mdi:chart-bar', classes: 'bottom-[40%] right-[30%] w-16 h-16 rotate-3 text-gray-300/70' },
  { name: 'mdi:brain', classes: 'top-[25%] left-[30%] w-12 h-12 -rotate-6 text-gray-300/60' },
  { name: 'mdi:sigma', classes: 'top-[70%] right-[30%] w-14 h-14 rotate-12 text-gray-300/80' },
  { name: 'mdi:cube-outline', classes: 'bottom-[20%] left-[25%] w-20 h-20 -rotate-12 text-gray-300/70' },
  { name: 'mdi:react', classes: 'top-[5%] right-[48%] w-14 h-14 rotate-15 text-gray-300/70' },
  { name: 'mdi:nodejs', classes: 'bottom-[40%] left-[30%] w-16 h-16 -rotate-15 text-gray-300/60' },
  { name: 'mdi:database', classes: 'top-[80%] left-[40%] w-14 h-14 rotate-8 text-gray-300/80' },
  { name: 'mdi:cloud-outline', classes: 'top-[12%] left-[35%] w-20 h-20 -rotate-8 text-gray-300/60' },
  { name: 'mdi:test-tube', classes: 'top-[75%] right-[15%] w-12 h-12 rotate-15 text-gray-300/70' },
  { name: 'mdi:satellite-variant', classes: 'bottom-[40%] left-[18%] w-14 h-14 -rotate-15 text-gray-300/80' },
  { name: 'mdi:robot-industrial', classes: 'bottom-[5%] right-[40%] w-16 h-16 rotate-10 text-gray-300/60' },
  { name: 'mdi:chart-bubble', classes: 'bottom-[60%] right-[45%] w-12 h-12 -rotate-10 text-gray-300/70' },
  { name: 'mdi:server', classes: 'top-[55%] right-[40%] w-14 h-14 rotate-5 text-gray-300/80' },
  { name: 'mdi:flask', classes: 'bottom-[35%] left-[40%] w-12 h-12 -rotate-5 text-gray-300/60' },
];

const mobileIcons = [
  { name: 'mdi:code-braces', classes: 'top-[15%] left-[8%] w-10 h-10 -rotate-12 text-gray-300/70' },
  { name: 'mdi:atom', classes: 'top-[20%] right-[5%] w-14 h-14 rotate-12 text-gray-300/80' },
  { name: 'mdi:chart-line', classes: 'bottom-[15%] right-[8%] w-12 h-12 rotate-6 text-gray-300/70' },
  { name: 'mdi:brain', classes: 'bottom-[20%] left-[5%] w-12 h-12 -rotate-6 text-gray-300/60' },
  { name: 'mdi:terminal', classes: 'top-[15%] right-[35%] w-14 h-14 -rotate-6 text-gray-300/70' },
];
---
<section class="relative text-center py-20 overflow-hidden">
  
  <div class="absolute inset-0 z-0 hidden md:block">
    {desktopIcons.map((icon, index) => (
      <Icon 
        name={icon.name} 
        class:list={[ "absolute animate-float", icon.classes ]}
        style={`animation-delay: ${index * 600}ms; animation-duration: ${8 + index % 5}s;`}
      />
    ))}
  </div>

  <div class="absolute inset-0 z-0 block md:hidden">
    {mobileIcons.map((icon, index) => (
      <Icon 
        name={icon.name} 
        class:list={[ "absolute animate-float", icon.classes ]}
        style={`animation-delay: ${index * 600}ms; animation-duration: ${8 + index % 5}s;`}
      />
    ))}
  </div>

  <div class="relative z-10">
    <Image 
      src={profilePic}
      alt="A photo of Faisal Durbaa"
      width={600}
      height={600}
      quality={90}
      loading="eager"
      fetchpriority="high"
      class="w-72 h-72 rounded-full border-4 border-accent shadow-lg mx-auto mb-6"
    />
    <h1 class="text-5xl font-bold">Faisal Durbaa</h1>
    <p class="text-xl text-gray-600 mt-4 max-w-2xl mx-auto px-4">
      A Curious Young Man
    </p>
  </div>
</section>